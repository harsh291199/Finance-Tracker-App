<div class="results-block">
  <%= render 'layouts/messages' %>
</div>

<% if @friends %>
  <div class="card card-header results-block">
  <table class="col-md-12">
    <tbody>
      <% @friends.each do |friend|  %>
        <tr>
          <td><strong>Name: </strong> <%= friend.full_name %></td>
          <td><strong>Email: </strong> <%= friend.email %></td>
          <td><strong>Profile: </strong> <%= link_to 'View profile', '#',
                                        class: "btn btn-outline-success" %>
            <% if current_user.not_friends_with?(friend.id) %>
            <%= link_to 'Follow friend?', '#',
                        class: "btn btn-outline-success", method: :post %>
            <% else %>
              <span class="badge bg-secondary">
                You are already freinds
              </span>
            <% end %>
          </td>
        </tr>
      <% end %>
  </div>
<% end %>
